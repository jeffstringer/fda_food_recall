<% if @recalls.any? %>
  <h1>Latest FDA Recalls</h1>
  <% @recalls.each do |recall| %>
    <p><strong>Brand Name: </strong><%= (recall.company.name).html_safe %></p>
    <p><strong>Product Description: </strong><%= recall.product_description %></p>
    <p><strong>Reason: </strong><%= recall.reason %></p>
    <p><strong>Release Date: </strong><%= recall.release_date.strftime('%A, %d %b %Y %l:%M %p') %></p>
    </br
  <% end %>
<% else %>
  <h2>Please stand by...</h2>
<% end %>