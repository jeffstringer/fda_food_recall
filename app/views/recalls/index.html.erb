<% if @recalls.any? %>
  <h1 id="title">Latest FDA Recalls</h1>
  <% @recalls.each do |recall| %>
    <strong>Brand Name: </strong><%= (recall.company.name).html_safe %></br>
    <strong>Product Description: </strong><%= recall.product_description %></br>
    <strong>Reason: </strong><%= recall.reason %></br>
    <strong>Release Date: </strong><%= recall.release_date.strftime('%A, %d %b %Y %l:%M %p') %></br>
    <strong>More information: </strong><%= link_to recall.company_release_link, "#{recall.company_release_link}" %></br>
    </br>
  <% end %>
<% else %>
  <h2>Please stand by...</h2>
<% end %>